<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title><%= title %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="min-h-screen" style="background: #ffffff; display: flex; align-items: center; justify-content: center; padding: 1.5rem;">
  
  <!-- Main Card -->
  <div class="card animate-scaleIn" style="width: 100%; max-width: 460px; padding: 3rem; box-shadow: var(--shadow-xl);">
    
    <!-- Logo & Header -->
    <div class="text-center mb-10">
      <div style="display: inline-flex; align-items: center; justify-content: center; width: 72px; height: 72px; background: var(--accent-primary); border-radius: var(--radius-xl); margin-bottom: 1.5rem; color: white; box-shadow: 0 8px 20px rgba(37, 99, 235, 0.2);">
        <%- include('icons/cpu-chip', { size: 40 }) %>
      </div>
      <h1 class="text-headline mb-3" style="color: var(--text-primary);"><%= gameName %></h1>
      <p class="text-body" style="color: var(--text-secondary);">Teste seus conhecimentos sobre intelig칡ncia artificial</p>
    </div>

    <!-- Server Error -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div style="padding: 1rem 1.25rem; background: var(--error-bg); border: 1px solid rgba(220, 38, 38, 0.2); border-radius: var(--radius-lg); margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
        <span style="color: var(--error); flex-shrink: 0;"><%- include('icons/exclamation-triangle', { size: 20 }) %></span>
        <p style="color: var(--error); font-size: 0.875rem; margin: 0;"><%= error %></p>
      </div>
    <% } %>

    <!-- Form -->
    <form id="join-form" style="display: flex; flex-direction: column; gap: 1.5rem;">
      
      <!-- Room Code Input -->
      <div>
        <label for="room-code" style="display: block; margin-bottom: 0.625rem; font-size: 0.875rem; font-weight: 600; color: var(--text-primary);">C칩digo da Sala</label>
        <input 
          type="text" 
          id="room-code" 
          name="roomCode"
          placeholder="ABC123"
          maxlength="6"
          autocomplete="off"
          autocapitalize="characters"
          spellcheck="false"
          style="width: 100%; padding: 1rem 1.25rem; background: var(--bg-tertiary); border: 1px solid var(--border-light); border-radius: var(--radius-lg); color: var(--text-primary); font-size: 1.5rem; font-weight: 700; text-align: center; text-transform: uppercase; letter-spacing: 0.15em; font-family: 'Inter', sans-serif; transition: all var(--transition-base);"
          required
        >
        <span id="room-code-error" style="display: none; margin-top: 0.5rem; font-size: 0.8125rem; color: var(--error);"></span>
      </div>

      <!-- Nickname Input -->
      <div>
        <label for="nickname" style="display: block; margin-bottom: 0.625rem; font-size: 0.875rem; font-weight: 600; color: var(--text-primary);">Seu Apelido</label>
        <input 
          type="text" 
          id="nickname" 
          name="nickname"
          placeholder="Como quer ser chamado?"
          maxlength="30"
          autocomplete="off"
          style="width: 100%; padding: 1rem 1.25rem; background: var(--bg-tertiary); border: 1px solid var(--border-light); border-radius: var(--radius-lg); color: var(--text-primary); font-size: 1rem; font-family: 'Inter', sans-serif; transition: all var(--transition-base);"
          required
        >
        <span id="nickname-error" style="display: none; margin-top: 0.5rem; font-size: 0.8125rem; color: var(--error);"></span>
      </div>

      <!-- Submit Button -->
      <button type="submit" id="btn-join" class="btn btn-primary" style="width: 100%; padding: 1rem 1.5rem; font-size: 1rem; margin-top: 0.5rem;">
        <span id="btn-text">Entrar na Sala</span>
        <svg id="btn-spinner" style="display: none; width: 1.25rem; height: 1.25rem; animation: spin 1s linear infinite;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10" stroke-opacity="0.25"></circle>
          <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"></path>
        </svg>
      </button>

      <!-- General Error -->
      <div id="error-message" style="display: none; padding: 1rem 1.25rem; background: var(--error-bg); border: 1px solid rgba(220, 38, 38, 0.2); border-radius: var(--radius-lg); margin-top: 0.5rem;">
        <div style="display: flex; align-items: center; gap: 0.75rem;">
          <span style="color: var(--error); flex-shrink: 0;"><%- include('icons/x-circle', { size: 20 }) %></span>
          <p id="error-text" style="color: var(--error); font-size: 0.875rem; margin: 0;"></p>
        </div>
      </div>
    </form>

    <!-- Privacy Note -->
    <div style="margin-top: 2rem; text-align: center;">
      <p style="font-size: 0.8125rem; color: var(--text-muted); display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
        <span>游</span>
        <span>Sem login. Sem dados pessoais. Apenas divers칚o.</span>
      </p>
    </div>

    <!-- Divider -->
    <div style="margin: 2rem 0; height: 1px; background: linear-gradient(90deg, transparent, var(--border-light), transparent);"></div>

    <!-- Host Link -->
    <div class="text-center">
      <a href="/host" style="color: var(--accent-primary); text-decoration: none; font-size: 0.875rem; font-weight: 500; transition: color var(--transition-fast); display: inline-flex; align-items: center; gap: 0.25rem;">
        Sou facilitador
        <svg style="width: 14px; height: 14px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </a>
    </div>
  </div>

  <style>
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    
    input:focus {
      outline: none;
      border-color: var(--accent-primary) !important;
      box-shadow: 0 0 0 3px var(--accent-10);
    }
    
    input::placeholder {
      color: var(--text-muted);
      opacity: 0.6;
    }
    
    @media (max-width: 480px) {
      body {
        padding: 1rem !important;
      }
      
      .card {
        padding: 2rem !important;
      }
    }
  </style>

  <script>
    // Preencher c칩digo da URL se existir
    const urlParams = new URLSearchParams(window.location.search);
    const codeFromUrl = urlParams.get('code');
    if (codeFromUrl) {
      document.getElementById('room-code').value = codeFromUrl.toUpperCase();
      // Focus no nickname se o c칩digo j치 est치 preenchido
      document.getElementById('nickname').focus();
    }

    // Uppercase autom치tico e valida칞칚o do c칩digo
    const roomCodeInput = document.getElementById('room-code');
    roomCodeInput.addEventListener('input', (e) => {
      e.target.value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
      clearError('room-code');
    });

    // Limpar erros ao digitar
    document.getElementById('nickname').addEventListener('input', () => {
      clearError('nickname');
    });

    function clearError(field) {
      const input = document.getElementById(field);
      const errorEl = document.getElementById(field + '-error');
      input.style.borderColor = 'var(--border-light)';
      errorEl.style.display = 'none';
      document.getElementById('error-message').style.display = 'none';
    }

    function showFieldError(field, message) {
      const input = document.getElementById(field);
      const errorEl = document.getElementById(field + '-error');
      input.style.borderColor = 'var(--error)';
      errorEl.textContent = message;
      errorEl.style.display = 'block';
      input.focus();
    }

    function showGeneralError(message) {
      const errorEl = document.getElementById('error-message');
      document.getElementById('error-text').textContent = message;
      errorEl.style.display = 'block';
    }

    function setLoading(loading) {
      const btn = document.getElementById('btn-join');
      const btnText = document.getElementById('btn-text');
      const btnSpinner = document.getElementById('btn-spinner');
      
      btn.disabled = loading;
      btnText.textContent = loading ? 'Entrando...' : 'Entrar na Sala';
      btnSpinner.style.display = loading ? 'block' : 'none';
    }

    // Submit form
    document.getElementById('join-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const roomCode = document.getElementById('room-code').value.trim().toUpperCase();
      const nickname = document.getElementById('nickname').value.trim();
      
      // Valida칞칫es
      if (!roomCode) {
        showFieldError('room-code', 'Digite o c칩digo da sala');
        return;
      }
      
      if (roomCode.length < 6) {
        showFieldError('room-code', 'O c칩digo deve ter 6 caracteres');
        return;
      }
      
      if (!nickname) {
        showFieldError('nickname', 'Digite seu apelido');
        return;
      }
      
      if (nickname.length < 2) {
        showFieldError('nickname', 'O apelido deve ter pelo menos 2 caracteres');
        return;
      }
      
      setLoading(true);
      
      try {
        // Verificar se sala existe
        const existsRes = await fetch(`/api/rooms/${roomCode}/exists`);
        const existsData = await existsRes.json();
        
        if (!existsData.exists) {
          showFieldError('room-code', 'Sala n칚o encontrada ou expirada');
          setLoading(false);
          return;
        }
        
        // Entrar na sala
        const joinRes = await fetch(`/api/rooms/${roomCode}/join`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ nickname })
        });
        
        const joinData = await joinRes.json();
        
        if (!joinRes.ok) {
          throw new Error(joinData.error || 'Erro ao entrar na sala');
        }
        
        // Salvar playerId e redirecionar
        sessionStorage.setItem('playerId', joinData.playerId);
        sessionStorage.setItem('nickname', nickname);
        
        window.location.href = `/play/${roomCode}`;
        
      } catch (error) {
        showGeneralError(error.message);
        setLoading(false);
      }
    });
  </script>
</body>
</html>
