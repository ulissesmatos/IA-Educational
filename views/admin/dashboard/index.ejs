<%- include('../partials/header') %>

<div class="admin-header">
    <h1 class="admin-page-title">Dashboard</h1>
    <p class="admin-page-description">Visão geral do sistema</p>
</div>

<div class="admin-content">
    <!-- Stats Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(37, 99, 235, 0.1); color: #2563EB;">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="admin-stat-content">
                <p class="admin-stat-label">Total de Perguntas</p>
                <p class="admin-stat-value"><%= stats.totalQuestions || 0 %></p>
            </div>
        </div>
        
        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(16, 185, 129, 0.1); color: #10B981;">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="admin-stat-content">
                <p class="admin-stat-label">Perguntas Ativas</p>
                <p class="admin-stat-value"><%= stats.activeQuestions || 0 %></p>
            </div>
        </div>
        
        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(139, 92, 246, 0.1); color: #8B5CF6;">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>
            <div class="admin-stat-content">
                <p class="admin-stat-label">Ferramentas IA</p>
                <p class="admin-stat-value"><%= stats.totalAiTools || 0 %></p>
            </div>
        </div>
        
        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(245, 158, 11, 0.1); color: #F59E0B;">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
            </div>
            <div class="admin-stat-content">
                <p class="admin-stat-label">Ferramentas em Destaque</p>
                <p class="admin-stat-value"><%= stats.featuredAiTools || 0 %></p>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="admin-card" style="margin-top: 2rem;">
        <div class="admin-card-header">
            <h2 class="admin-card-title">Ações Rápidas</h2>
        </div>
        <div class="admin-card-body">
            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="/admin/quiz/new" class="admin-btn admin-btn-primary">
                    <svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Nova Pergunta
                </a>
                
                <a href="/admin/ai-tools/new" class="admin-btn admin-btn-secondary">
                    <svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Nova Ferramenta IA
                </a>
                
                <a href="/host" class="admin-btn admin-btn-secondary" target="_blank">
                    <svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    Iniciar Jogo
                </a>
            </div>
        </div>
    </div>
    
    <!-- Recent Activity (placeholder) -->
    <div class="admin-card" style="margin-top: 2rem;">
        <div class="admin-card-header">
            <h2 class="admin-card-title">Atividade Recente</h2>
        </div>
        <div class="admin-card-body">
            <p style="color: var(--admin-text-secondary); text-align: center; padding: 2rem 0;">
                Nenhuma atividade recente
            </p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
